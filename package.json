{
  "name": "astra-monorepo",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "voice-memo": "bun run packages/astra-scheduler/src/jobs/voice-memo.ts",
    "journal": "bun run packages/astra-scheduler/src/jobs/journal.ts",
    "dev:webapp": "bun run --filter astra-webapp dev",
    "dev:bot": "bun run --filter astra-bot dev",
    "dev:watcher": "bun run --filter astra-watcher dev",
    "build:watcher": "bun run --filter astra-watcher build",
    "watcher": "bun run packages/astra-watcher/src/index.ts",
    "test": "bun run --filter '*' test",
    "test:watch": "bun run --filter astra-scheduler test:watch",
    "test:coverage": "bun run --filter astra-scheduler test:coverage",
    "lint": "eslint packages/*/src packages/*/vals",
    "lint:fix": "eslint packages/*/src packages/*/vals --fix",
    "format": "prettier --write 'packages/**/*.{ts,tsx}'",
    "format:check": "prettier --check 'packages/**/*.{ts,tsx}'",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  }
}
