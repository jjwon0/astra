# API Keys
GEMINI_API_KEY=your_gemini_api_key_here
NOTION_API_KEY=your_notion_integration_token_here

# Notion Configuration
PARENT_PAGE_ID=your_notion_parent_page_id
NOTION_TODO_DATABASE_ID=
NOTION_NOTES_DATABASE_ID=
NOTION_JOURNAL_DATABASE_ID=

# Voice Memo Job Configuration
VOICE_MEMO_JOB_ENABLED=true
VOICE_MEMO_JOB_INTERVAL_MINUTES=5
VOICE_MEMOS_DIR=~/Library/Mobile Documents/com~apple~CloudDocs/Voice Memos
ARCHIVE_DIR=~/.astra/archive
FAILED_DIR=~/.astra/failed
INVALID_DIR=~/.astra/invalid

# Journal Processing Job Configuration (disabled by default)
JOURNAL_PROCESSING_JOB_ENABLED=false
JOURNAL_PROCESSING_JOB_INTERVAL_MINUTES=60

# Global Configuration
LOG_FILE=~/.astra/logs/astra.log
STATE_FILE=~/.astra/state.json
MAX_RETRIES=3
GARBAGE_CONFIDENCE_THRESHOLD=30

# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_CHANNEL_ID=optional_channel_id
DISCORD_ALLOWED_USERS=comma_separated_user_ids
